# Пример файла .env для локальной разработки
# Скопируйте этот файл в .env и настройте переменные

# Формат: replinet.ru:80,project.replinet.ru:8082 или {"replinet.ru":80,"project.replinet.ru":8082}
DOMAINS=replinet.ru:80,project.replinet.ru:8082

# IP-адрес сервера (для локальной разработки можно использовать 127.0.0.1)
SERVER_IP=127.0.0.1

# Включить/выключить SSL (true/false)
# На продакшн-сервере установите true
# На локальной разработке оставьте false
ENABLE_SSL=false

# Email для Let's Encrypt (если ENABLE_SSL=true)
# Используется для уведомлений об истечении сертификатов
EMAIL_FOR_SSL=your-email@example.com

# Email для уведомлений о проблемах с прокси
NOTIFY_EMAIL=your-email@example.com

# Имя проекта для Docker Compose
COMPOSE_PROJECT_NAME=nginx-proxy 